{
  "name": "spineforge-kit",
  "version": "1.0.0",
  "description": "Production-ready TypeScript toolkit for SpineForge character transformations",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "eslint packages/*/src --ext .ts",
    "format": "prettier --write \"packages/*/src/**/*.ts\"",
    "clean": "rm -rf packages/*/dist packages/*/.turbo node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "spineforge",
    "character",
    "sora",
    "director",
    "cli",
    "typescript"
  ],
  "author": "",
  "license": "MIT"
}
